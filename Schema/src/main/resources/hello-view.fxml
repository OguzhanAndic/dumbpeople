<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hello.HelloController" spacing="10" alignment="CENTER" style="-fx-background-color: #f0f0f0; -fx-padding: 20;">
    <!-- Header Section with navigation buttons -->
    <VBox alignment="CENTER" spacing="10">
        <Button fx:id="prevMonthBtn" text=" Föregående" onAction="#goToPreviousMonth" style="-fx-font-size: 14px; -fx-padding: 10px 20px;"/>
        <Button fx:id="nextMonthBtn" text="Nästa " onAction="#goToNextMonth" style="-fx-font-size: 14px; -fx-padding: 10px 20px;"/>
    </VBox>

    <!-- Calendar Grid -->
    <GridPane fx:id="calendarGrid" alignment="CENTER" hgap="10" vgap="10" />
</VBox>
